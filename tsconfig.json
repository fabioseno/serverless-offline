{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "esnext"
    ],
    "baseUrl": "./"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/dist/*",
    "**/coverage/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}